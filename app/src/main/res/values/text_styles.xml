<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Typography">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="elevation">0dp</item>
        <item name="android:outlineProvider">none</item>
    </style>


    <style name="Typography.Regular" parent="Typography">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Typography.Bold" parent="Typography">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Typography.Bold.Title.24" parent="Typography.Bold">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:spacing">0.15dp</item>
    </style>

    <style name="Typography.Bold.Title.20" parent="Typography.Bold">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:spacing">0.15dp</item>
    </style>

    <style name="Typography.Regular.Title.24" parent="Typography.Regular">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:spacing">0.15dp</item>
    </style>

    <style name="Typography.Regular.Subtitle.16" parent="Typography.Regular">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:spacing">0.15dp</item>
    </style>

    <style name="Typography.Bold.Subtitle.16" parent="Typography.Bold">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24dp</item>
        <item name="android:spacing">0.15dp</item>
    </style>


</resources>