<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="PrimaryTextColor">@color/black</item>
        <item name="ItemBackground">@color/white</item>
        <item name="MainBackground">@color/white</item>

    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#303030</item>
        <item name="PrimaryTextColor">@color/white</item>
        <item name="ItemBackground">@color/dark_gray</item>
        <item name="MainBackground">@color/black</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>


    <style name="AppThemeDark.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Light" parent="AppTheme.NoActionBar"/>
    <style name="Dark" parent="AppThemeDark.NoActionBar"/>

</resources>