<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.example.rnm_mvvm.CharactersQuery.Result" />


    </data>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="?attr/colorOnTertiary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="12dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="?attr/colorOnTertiary"
        android:visibility="invisible"
        android:id="@+id/main_ly"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/item_row_image_view"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                app:imageUrl="@{item.image}"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:textColor="?attr/colorOnSecondary"
                style="@style/Typography.Regular.Subtitle.16"
                android:paddingStart="28dp"
                android:id="@+id/item_row_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{@string/id(item.id)}"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_row_image_view"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:textColor="?attr/colorOnSecondary"
                style="@style/Typography.Regular.Subtitle.16"
                android:id="@+id/item_row_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:text="@{@string/name(item.name)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_row_id" />

            <TextView
                android:textColor="?attr/colorOnSecondary"
                style="@style/Typography.Regular.Subtitle.16"
                android:id="@+id/item_row_location_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@{@string/location(item.location.name)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_row_name_tv" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"
                app:layout_constraintTop_toBottomOf="@id/item_row_location_tv"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:background="?attr/colorOnTertiary"
        android:id="@+id/shimmer_ly"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="invisible">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="?attr/colorOnTertiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:background="@color/shimmerColor"
                    android:id="@+id/item_row_image_view_shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:background="@color/shimmerColor"
                    style="@style/Typography.Regular.Subtitle.16"
                    android:paddingStart="28dp"
                    android:id="@+id/item_row_id_shimmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_row_image_view_shimmer"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:background="@color/shimmerColor"
                    style="@style/Typography.Regular.Subtitle.16"
                    android:id="@+id/item_row_name_tv_shimmer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_row_id_shimmer" />

                <TextView
                    android:background="@color/shimmerColor"
                    style="@style/Typography.Regular.Subtitle.16"
                    android:id="@+id/item_row_location_tv_shimmer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_row_name_tv_shimmer" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    app:layout_constraintTop_toBottomOf="@id/item_row_location_tv_shimmer"/>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </com.facebook.shimmer.ShimmerFrameLayout>
    </androidx.cardview.widget.CardView>

</layout>
